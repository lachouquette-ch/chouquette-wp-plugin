{
  "mappings": {
    "dynamic": false,
    "properties": {
      "date": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss"
      },
      "content": {
        "type": "text",
        "analyzer": "lachouquette"
      },
      "title": {
        "type": "text",
        "analyzer": "lachouquette"
      },
      "slug": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        },
        "analyzer": "lachouquette"
      },
      "chouquettise_end": {
        "type": "date",
        "format": "yyyy-MM-dd"
      },
      "location.address": {
        "type" : "text",
        "analyzer": "standard"
      },
      "location.position": {
        "type": "geo_point"
      },
      "localisation.name": {
        "type": "keyword"
      },
      "categories.name": {
        "type": "keyword"
      },
      "tags.name": {
        "type": "keyword"
      },
      "criteria.term_name": {
        "type": "keyword"
      },
      "yoast_focus_kw": {
        "type": "keyword"
      },
      "yoast_meta_desc": {
        "type": "text",
        "analyzer": "lachouquette"
      }
    }
  },
  "settings": {
    "analysis": {
      "filter": {
        "french_elision": {
          "type": "elision",
          "articles": [
            "l",
            "m",
            "t",
            "qu",
            "n",
            "s",
            "j",
            "d",
            "c",
            "jusqu",
            "quoiqu",
            "lorsqu",
            "puisqu"
          ],
          "articles_case": "true"
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        }
      },
      "analyzer": {
        "lachouquette": {
          "filter": [
            "french_elision",
            "lowercase",
            "stop",
            "word_delimiter_graph",
            "french_stemmer"
          ],
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ]
        }
      }
    }
  }
}